{
    "Lua.diagnostics.globals": ["vim"],

    "files.associations": {
        "config": "properties",
        "configs/ghostty/themes/*": "properties"
    },

    "[json]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[jsonc]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[lua]": {
        "editor.defaultFormatter": "sumneko.lua"
    },
    "[shellscript]": {
        "editor.defaultFormatter": "mads-hartmann.bash-ide-vscode"
    }
}
